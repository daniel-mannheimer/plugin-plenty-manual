{% set lang = services.sessionStorage.getLang() %}

<footer class="page-footer" data-tg="sticky-container-above">

    <hr>

    <div class="container">

        <div class="text-center my-4">
            <img class="footer-logo" src="{{ plugin_path('PlentyManual') }}/images/_layout/plentyknowledge-logo.svg" alt="plentyKnowledge Logo" width="136" height="27">
        </div>

        <div class="row">
            {% for i in 1..4 %}
            <div class="col-6 col-md-3">
                <div>
                    <strong>{{ trans("PlentyManual::Footer.footer_" ~ i ) }}</strong>
                </div>

                <hr class="my-1">

                <ul class="list-unstyled">
                    {% for j in 1..9 %}
                        {% set label = trans("PlentyManual::Footer.footer_" ~ i ~ "_" ~ j ) %}
                        {% set link = trans("PlentyManual::Footer.footer_" ~ i ~ "_" ~ j ~ "_link" ) %}
                        {% if label %}
                            <li>
                                <a href="{{ link }}">{{ label }}</a>
                            </li>
                        {% endif %}
                    {% endfor %}
                </ul>
            </div>
            {% endfor %}

        </div>

        <div class="social-list text-center">
            <ul class="list-inline mb-0">
                <li class="list-inline-item">
                    <a class="color-hover-facebook" href="http://www.facebook.com/plentyMarkets"><i class="fa fa-facebook"></i><span class="sr-only">Facebook</span></a>
                </li>
                <li class="list-inline-item">
                    <a class="color-hover-twitter" href="http://twitter.com/#!/plentymarkets"><i class="fa fa-twitter"></i><span class="sr-only">Twitter</span></a>
                </li>
                <li class="list-inline-item">
                    <a class="color-hover-xing" href="http://www.xing.com/company/plentymarkets"><i class="fa fa-xing"></i><span class="sr-only">Xing</span></a>
                </li>
                <li class="list-inline-item">
                    <a class="color-hover-rss" href="https://www.plentymarkets.eu/?ActionCall=WebActionRSS&rss_id=1"><i class="fa fa-rss"></i><span class="sr-only">RSS</span></a>
                </li>
            </ul>
        </div>

        <hr class="my-2">

        <div class="row small">
            <div class="col-sm">
                Â© Copyright {{ "now" | date("Y") }} <a href="{{ trans("PlentyManual::Links.plentymarkets") }}" target="_blank">{{ trans("PlentyManual::Manual.plentymarketsCompany") }}</a>
            </div>
            <div class="col-sm text-right">
                <a href="{{ trans("PlentyManual::Links.termsAndConditions") }}">{{ trans("PlentyManual::Manual.termsAndConditions") }}</a>
                |
                <a href="{{ trans("PlentyManual::Links.privacyPolicy") }}">{{ trans("PlentyManual::Manual.privacyPolicy") }}</a>
                |
                <a href="{{ trans("PlentyManual::Links.legalDisclosure") }}">{{ trans("PlentyManual::Manual.legalDisclosure") }}</a>
            </div>
        </div>

    </div>

</footer>