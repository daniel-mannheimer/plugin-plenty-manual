<div class="fixed-banner fixed-banner-top fixed-banner-closable bg-warning text-black d-none" tabindex="-1" role="dialog" hidden data-fn="cookie-related-elem" data-fn-options="{ cookieName: 'privacyBannerHidden', cookieExpiresDays: 365, hiddenCookieValue: '1', hiddenClass: 'd-none' }">
						
	<div class="container py-3">
		
		<div class="mb-2">
			{% set beforeLinkText = trans("PlentyManual::DataProcessingInformation.dataProcessingBeforeLinkText") %}
			{% set link = trans("PlentyManual::DataProcessingInformation.dataProcessingLink") %}
			{% set linkText = trans("PlentyManual::DataProcessingInformation.dataProcessingLinkText") %}
			{% set afterLinkText = trans("PlentyManual::DataProcessingInformation.dataProcessingAfterLinkText") %}
			{{ beforeLinkText }}{% if link and linkText %}<a href="{{ link }}" target="_blank">{{ linkText }}</a>{% endif %}{{ afterLinkText }}
		</div>
		
		<div class="text-center">
			{% set okText = trans("PlentyManual::DataProcessingInformation.dataProcessingOkButtonText") %}
			{% set cancelText = trans("PlentyManual::DataProcessingInformation.dataProcessingCancelButtonText") %}
			{% if okText %}<button class="btn btn-success" data-fn="cookie-related-elem-close"><span>{{ okText }}</span><i class="fa fa-check" aria-hidden="true"></i></button>{% endif %}<!--
			-->{% if cancelText %}<button class="btn btn-secondary ml-2" data-fn="cookie-related-elem-close"><span>{{ cancelText }}</span><i class="fa fa-close" aria-hidden="true"></i></button>{% endif %}
		</div>
		
	</div>
	
</div>

